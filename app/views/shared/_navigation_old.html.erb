<!-- Maybe-inspired Header -->
<header class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto">
    <!-- Top Navigation Bar -->
    <div class="flex items-center justify-between h-16 px-4 sm:px-6 lg:px-8">
      <!-- Logo and Brand -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-3 group" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-200">
            <span class="text-white font-bold text-lg">L</span>
          </div>
          <div class="hidden sm:block">
            <h1 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors duration-200">Lani</h1>
            <p class="text-xs text-gray-500 -mt-1">Project Management</p>
          </div>
        <% end %>
      </div>

      <!-- Main Navigation -->
      <nav class="hidden md:flex items-center space-x-1">
        <%= link_to projects_path, 
            class: "#{current_page?(projects_path) || params[:controller] == 'projects' ? 'bg-blue-50 text-blue-700 border-blue-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 border-transparent'} px-4 py-2 rounded-lg text-sm font-medium border transition-all duration-200 flex items-center space-x-2" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span>Projects</span>
        <% end %>

        <% if user_signed_in? %>
          <%= link_to reports_path, 
              class: "#{params[:controller] == 'reports' ? 'bg-purple-50 text-purple-700 border-purple-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 border-transparent'} px-4 py-2 rounded-lg text-sm font-medium border transition-all duration-200 flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <span>Reports</span>
          <% end %>
        <% end %>

        <% if current_user&.admin? %>
          <%= link_to admin_dashboard_index_path, 
              class: "#{params[:controller]&.start_with?('admin/') ? 'bg-red-50 text-red-700 border-red-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 border-transparent'} px-4 py-2 rounded-lg text-sm font-medium border transition-all duration-200 flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Admin</span>
          <% end %>
        <% end %>
      </nav>

      <!-- User Menu -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- User Profile Menu -->
          <div class="relative">
            <div class="flex items-center space-x-3">
              <!-- User Avatar -->
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-gradient-to-br from-gray-400 to-gray-500 rounded-full flex items-center justify-center">
                  <span class="text-white font-medium text-sm">
                    <%= current_user.display_name.first.upcase %>
                  </span>
                </div>
                <div class="hidden lg:block">
                  <p class="text-sm font-medium text-gray-900"><%= current_user.display_name %></p>
                  <p class="text-xs text-gray-500"><%= current_user.role.humanize %></p>
                </div>
              </div>
              
              <!-- Sign Out Button -->
              <%= link_to destroy_user_session_path, method: :delete, 
                  class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                <span class="hidden sm:inline">Sign out</span>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Guest User Menu -->
          <div class="flex items-center space-x-3">
            <%= link_to "Sign in", new_user_session_path, 
                class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition-colors duration-200" %>
            <%= link_to "Sign up", new_user_registration_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-200" %>
          </div>
        <% end %>

        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button type="button" class="inline-flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-gray-500 hover:bg-gray-100 transition-colors duration-200" 
                  onclick="toggleMobileMenu()">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
      <div class="px-4 py-3 space-y-1">
        <%= link_to projects_path, 
            class: "#{current_page?(projects_path) || params[:controller] == 'projects' ? 'bg-blue-50 text-blue-700 border-blue-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 border-transparent'} flex items-center space-x-3 px-3 py-2 rounded-lg text-base font-medium border transition-all duration-200" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span>Projects</span>
        <% end %>

        <% if user_signed_in? %>
          <%= link_to reports_path, 
              class: "#{params[:controller] == 'reports' ? 'bg-purple-50 text-purple-700 border-purple-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 border-transparent'} flex items-center space-x-3 px-3 py-2 rounded-lg text-base font-medium border transition-all duration-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <span>Reports</span>
          <% end %>
        <% end %>

        <% if current_user&.admin? %>
          <%= link_to admin_dashboard_index_path, 
              class: "#{params[:controller]&.start_with?('admin/') ? 'bg-red-50 text-red-700 border-red-200' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50 border-transparent'} flex items-center space-x-3 px-3 py-2 rounded-lg text-base font-medium border transition-all duration-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Admin</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>

<!-- Project Context Navigation (when viewing a specific project) -->
<% if @project.present? %>
  <div class="bg-gray-50 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-3">
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2 text-sm text-gray-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <span>Project:</span>
            <%= link_to @project.name, project_path(@project), class: "font-medium text-gray-900 hover:text-blue-600" %>
          </div>
        </div>
        
        <nav class="flex items-center space-x-1">
          <%= link_to project_path(@project), 
              class: "#{current_page?(project_path(@project)) ? 'bg-white text-blue-700 border-blue-200 shadow-sm' : 'text-gray-600 hover:text-gray-900 hover:bg-white border-transparent'} px-3 py-1.5 rounded-md text-sm font-medium border transition-all duration-200" do %>
            Overview
          <% end %>
          
          <%= link_to project_tasks_path(@project), 
              class: "#{params[:controller] == 'tasks' ? 'bg-white text-blue-700 border-blue-200 shadow-sm' : 'text-gray-600 hover:text-gray-900 hover:bg-white border-transparent'} px-3 py-1.5 rounded-md text-sm font-medium border transition-all duration-200" do %>
            Tasks
          <% end %>
          
          <%= link_to project_budgets_path(@project), 
              class: "#{params[:controller] == 'project_budgets' ? 'bg-white text-blue-700 border-blue-200 shadow-sm' : 'text-gray-600 hover:text-gray-900 hover:bg-white border-transparent'} px-3 py-1.5 rounded-md text-sm font-medium border transition-all duration-200" do %>
            Budget
          <% end %>
          
          <%= link_to project_files_path(@project), 
              class: "#{params[:controller] == 'project_files' ? 'bg-white text-blue-700 border-blue-200 shadow-sm' : 'text-gray-600 hover:text-gray-900 hover:bg-white border-transparent'} px-3 py-1.5 rounded-md text-sm font-medium border transition-all duration-200" do %>
            Files
          <% end %>
        </nav>
      </div>
    </div>
  </div>
<% end %>

<script>
function toggleMobileMenu() {
  const menu = document.getElementById('mobile-menu');
  menu.classList.toggle('hidden');
}
</script>
